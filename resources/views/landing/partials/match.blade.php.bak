@push('scripts')
<script>
    function switchMatchTab(tab) {
        const btnUp = document.getElementById('tab-upcoming');
        const btnRes = document.getElementById('tab-results');
        const contentUp = document.getElementById('content-upcoming');
        const contentRes = document.getElementById('content-results');

        if (tab === 'upcoming') {
            btnUp.classList.add('bg-blue-600', 'text-white', 'shadow');
            btnUp.classList.remove('text-gray-400');
            btnRes.classList.remove('bg-blue-600', 'text-white', 'shadow');
            btnRes.classList.add('text-gray-400');
            contentUp.classList.remove('hidden');
            contentRes.classList.add('hidden');
        } else {
            btnRes.classList.add('bg-blue-600', 'text-white', 'shadow');
            btnRes.classList.remove('text-gray-400');
            btnUp.classList.remove('bg-blue-600', 'text-white', 'shadow');
            btnUp.classList.add('text-gray-400');
            contentRes.classList.remove('hidden');
            contentUp.classList.add('hidden');
        }
    }
</script>
