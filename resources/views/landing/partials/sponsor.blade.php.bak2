            {{-- Kontainer Utama Kubus (Scene) --}}
            <div id="cubeScene" class="w-full h-52 md:h-64" style="perspective: 1000px;">
                
                {{-- Kubus yang berputar --}}
                <div id="sponsorCube" class="relative w-full h-full duration-700 ease-in-out" style="transform-style: preserve-3d; transform: rotateY(0deg);">
                    
                    {{-- Face 1 (Sisi Depan) --}}
                    {{-- translateZ disesuaikan menjadi 576px --}}
                    <div class="cube-face" style="transform: rotateY(0deg) translateZ(576px);">
                        <div class="flex items-center justify-center gap-12 md:gap-16 h-full">
                            {{-- Sponsor 1-3 (W-32 H-24) --}}
                            <div class="flex-shrink-0"><div class="w-32 h-24 flex items-center justify-center"><img src="http://localhost/ARN/LandingPage/Template/kagendraV2/assets/images/sponsors/02. Sponsor/Color Logo/By.U Logo/By.U Logo.png" alt="By.u" class="max-w-full max-h-full object-contain"></div></div>
                            <div class="flex-shrink-0"><div class="w-32 h-24 flex items-center justify-center"><img src="http://localhost/ARN/LandingPage/Template/kagendraV2/assets/images/sponsors/02. Sponsor/Color Logo/Dunia Games Logo/Dunia Games Red Logo.png" alt="Dunia Games" class="max-w-full max-h-full object-contain"></div></div>
                            <div class="flex-shrink-0"><div class="w-32 h-24 flex items-center justify-center"><img src="http://localhost/ARN/LandingPage/Template/kagendraV2/assets/images/sponsors/02. Sponsor/White Logo/GamesMAX Logo/GamesMAX Logo.png" alt="GamesMax" class="max-w-full max-h-full object-contain"></div></div>
                        </div>
                    </div>

                    {{-- Face 2 (Sisi Kanan) --}}
                    {{-- translateZ disesuaikan menjadi 576px --}}
                    <div class="cube-face" style="transform: rotateY(90deg) translateZ(576px);">
                        <div class="flex items-center justify-center gap-12 md:gap-16 h-full">
                            {{-- Sponsor 4-6 (W-32 H-24) --}}
                            <div class="flex-shrink-0"><div class="w-32 h-24 flex items-center justify-center"><img src="http://localhost/ARN/LandingPage/Template/kagendraV2/assets/images/sponsors/02. Sponsor/White Logo/MAXStream Studios Logo/New MAXStream Studios White Logo.png" alt="MaxStream" class="max-w-full max-h-full object-contain"></div></div>
