        {{-- Indikator dan Navigasi Mobile (Dihapus karena tombol navigasi dihilangkan) --}}

    </div>
</section>

{{-- Custom CSS untuk 3D (Wajib) --}}
<style>
    /* Menyembunyikan sisi belakang elemen saat rotasi 3D */
    .cube-face {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const cube = document.getElementById('sponsorCube');
    
    let currentFace = 0;
    const totalFaces = 2; 
    const autoplayDelay = 5000; // 5 detik

    let autoplayTimer; 

    // Fungsi untuk memperbarui rotasi kubus
    const updateCube = () => {
        const rotationAngle = currentFace * -90; 
        cube.style.transform = `rotateY(${rotationAngle}deg)`;
    };

    // Fungsi untuk maju ke slide berikutnya (hanya dipanggil oleh timer)
    const nextFace = () => {
        currentFace = (currentFace + 1) % totalFaces;
        updateCube();
    };

    // Fungsi untuk memulai Autoplay
    const startAutoplay = () => {
        autoplayTimer = setInterval(() => {
            nextFace(); 
        }, autoplayDelay);
    };

    // --- Inisialisasi ---
    
    // Inisialisasi tampilan awal
    updateCube(); 
    
    // Mulai Autoplay
    startAutoplay(); 
});
</script>